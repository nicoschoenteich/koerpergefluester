---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
import NavBar from "../components/NavBar.astro";
import NavItem from "../components/NavItem.astro";

const content = {
	cards: [
		{
			id: "kurse",
			title: "Kurse",
			body: "Learn...",
		},
		{
			id: "sessions",
			title: "1:1 Sessions",
			body: "Learn...",
		}
	]
};
---

<Layout title="körpergeflüster">
	<NavBar>
		{
			content.cards.map(card => {
				return (
					<NavItem 
						navTo = {card.id} 
						title = {card.title}
					/>
				)
			})
		}
	</NavBar>
	{
		content.cards.map((card) => {
			return (
				<Card
					id = {card.id}
					title = {card.title}
					body = {card.body}
				/>
			)
		})
	}
</Layout>

