---
interface Props {
	id: string;
	title: string;
	body: string;
}

const { id, title, body } = Astro.props;
---

<div id={id} class="wrapper">
	<h1>
		{title}
	</h1>
	<p>
		{body}
	</p>
</div>

<style>
	.wrapper {
		display: flex;
		flex-direction: column;
		align-items: center;
		width: 100vw;

		height: 500px;
	}
</style>
